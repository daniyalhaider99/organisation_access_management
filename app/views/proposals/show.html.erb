<div class="container mt-5">
  <div class="card border-info shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-info"><%= @proposal.title %></h2>
      <p class="card-text"><strong>Description:</strong> <%= @proposal.description %></p>
      <p class="card-text"><strong>Organization:</strong> <%= @proposal.organization.name %></p>
      <span class="badge bg-secondary"><%= @proposal.age_group.titleize %></span>
      <div class="mt-3">
        <%= link_to 'Edit', edit_proposal_path(@proposal), class: 'btn btn-outline-primary' %>
        <%= button_to 'Delete', proposal_path(@proposal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-2' %>
        <%= link_to 'Back to Proposals', proposals_path, class: 'btn btn-secondary ms-2' %>
      </div>
    </div>
  </div>
</div>
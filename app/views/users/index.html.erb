<div class="container mt-5">
  <h2 class="mb-4 text-primary">All Users</h2>
  <table class="table table-striped table-hover">
    <thead class="table-info">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age Group</th>
        <th>Organizations</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.determine_age_group.titleize %></td>
          <td>
            <% user.organizations.each do |org| %>
              <span class="badge bg-secondary"><%= org.name %></span>
            <% end %>
          </td>
          <td>
            <%= link_to 'View', user_path(user), class: 'btn btn-outline-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>